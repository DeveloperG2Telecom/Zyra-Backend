# ===========================================
# CONFIGURAÇÃO DO SISTEMA ZYRA - G2 TELECOM
# ===========================================

# ===========================================
# CONFIGURAÇÃO DO SERVIDOR
# ===========================================
PORT=3002
NODE_ENV=development

# ===========================================
# CONFIGURAÇÃO JWT (JSON Web Tokens)
# ===========================================
JWT_SECRET=your-super-secret-jwt-key-here-change-this-in-production
JWT_EXPIRES_IN=24h

# ===========================================
# CONFIGURAÇÃO DE RATE LIMITING
# ===========================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ===========================================
# CONFIGURAÇÃO DO FIREBASE
# ===========================================
# IMPORTANTE: Substitua pelos valores reais do seu projeto Firebase
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_PRIVATE_KEY_ID=your-private-key-id
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_PRIVATE_KEY_HERE\n-----END PRIVATE KEY-----\n"
FIREBASE_CLIENT_EMAIL=your-service-account@your-project.iam.gserviceaccount.com
FIREBASE_CLIENT_ID=your-client-id
FIREBASE_AUTH_URI=https://accounts.google.com/o/oauth2/auth
FIREBASE_TOKEN_URI=https://oauth2.googleapis.com/token

# ===========================================
# CONFIGURAÇÕES ADICIONAIS
# ===========================================
# Origens permitidas para CORS (separadas por vírgula)
# Em produção, inclua todas as URLs do frontend
CORS_ORIGINS=https://zyra.g2telecom.com,https://zyra-front-eta.vercel.app
# Em desenvolvimento:
# CORS_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:10000

LOG_LEVEL=info
REQUEST_TIMEOUT=30000
MAX_BODY_SIZE=10485760
BASE_URL=http://localhost:3002
BCRYPT_ROUNDS=12
SECURITY_HEADERS=true
DEBUG=true
SHOW_STACK_TRACE=true
# ===========================================